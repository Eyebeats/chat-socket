<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefWidth="267.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <ImageView fx:id="avatarImageView" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@/images/offline.png" />
         </image>
      </ImageView>
   </left>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="displayNameLabel" style="-fx-font-weight: bold; -fx-font-size: 17px;">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="statusLabel" style="-fx-font-style: italic;" />
         </children>
      </VBox>
   </center>
   <padding>
      <Insets left="3.0" right="3.0" />
   </padding>
</BorderPane>
